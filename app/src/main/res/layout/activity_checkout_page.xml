<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainactivities.CheckoutPage"
    android:orientation="vertical">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Check Out"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Name"
            android:textColor="#9E640D"
            />
        <EditText
            android:id="@+id/checkoutName"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:hint="Enter Name" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Mobile"
            android:textColor="#9E640D"
            />
        <EditText
            android:id="@+id/checkoutMobile"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:hint="Enter Mobile Number" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Email ID"
            android:textColor="#9E640D"
            />
        <EditText
            android:id="@+id/checkoutEmail"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:hint="Enter Email ID" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Address"
            android:textColor="#9E640D"
            />

        <EditText
            android:id="@+id/checkoutAddress"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:hint="Enter Shipping address" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="0sp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:textSize="20sp"
            android:text="Price"
            android:textColor="#9E640D"
            />
        <TextView
            android:id="@+id/priceCheckout"
            android:layout_width="0sp"
            android:layout_weight="2"
            android:textSize="20sp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:text="Price" />
    </LinearLayout>
    <Button
        android:text="Checkout"
        android:id="@+id/checkOutButton"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        />
</LinearLayout>